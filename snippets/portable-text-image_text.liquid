<div
  class="imageText --{{textImage.layout}}">
  <img
    src="{{ textImage.desktopImageUrl }}"
    class="imageText__media" />
  <div
    class="imageText__wrapper ">
    <h1
      class="imageText_title">{{ textImage.title }}</h1>
    <div
      class="imageText_copy">{% render 'portable-text', portableText: textImage.body %}</div>
    <a
      class="cta"
      href="{{imageText.link.url}}"
      {% if textImage.link.newWindow %}target="_blank"{% endif %}>{{ textImage.link.title }}</a>
  </div>

</div>

<style>
  .imageText {
    display: flex;
    margin: 0 auto;
  }

  .imageText__media {
    width: 50%;
    object-fit: cover;
  }

  .imageText_title {
    font-size: 32px;
    line-height: 36px;
    color: #fff;
  }

  .imageText_copy {
    font-size: 18px;
    line-height: 24px;
    color: #fff;
  }

  .imageText__wrapper {
    width: 50%;
    background-color: #000;
    padding: 20px;
  }

  .--left {
    flex-direction: row;
  }

  .--right {
    flex-direction: row-reverse;
  }

  .cta {
    max-width: 240px;
    width: 100%;
    height: 48px;
    border: 1px solid #fff;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    background-color: transparent;
    text-decoration: none;
  }
</style>