<div
  class="collectionBanner">
  <img
    src="{{ collectionBanner.desktopImageUrl }}"
    class="collectionBanner__media" />
  <div
    class="collectionBanner__wrapper --{{collectionBanner.layout}}">
    <h1
      class="collectionBanner_title">{{ collectionBanner.title }}</h1>
    <p
      class="collectionBanner_copy">{{ collectionBanner.body }}</p>
    <a
      class="cta"
      href="{{collectionBanner.links.url}}"
      {% if collectionBanner.links.newWindow %}target="_blank"{% endif %}>{{ collectionBanner.links.title }}</a>
  </div>

</div>

<style>
  .collectionBanner {
    position: relative;
    margin: 0 auto;
  }

  .collectionBanner__media {
    width: 100%;
    height: 640px;
    object-fit: cover;
  }

  .collectionBanner_title {
    font-size: 32px;
    line-height: 36px;
    color: #fff;
  }

  .collectionBanner_copy {
    font-size: 18px;
    line-height: 24px;
    color: #fff;
  }

  .collectionBanner__wrapper {
    position: absolute;
  }

  .--left {
    bottom: 64px;
    left: 32px;
  }

  .--right {
    bottom: 64px;
    right: 32px;
  }
  .--center {
    bottom: 64px;
    left: 50%;
    transform: translateX(-50%);
  }

  .cta {
    max-width: 240px;
    width: 100%;
    height: 48px;
    border: 1px solid #fff;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    background-color: transparent;
    text-decoration: none;
  }
</style>